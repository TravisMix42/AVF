var takePicBtn=Ti.UI.createButton({title:"take a pick",height:80,bottom:20,left:20,right:20,color:"black",backgroundColor:"green",borderRadius:10});takePicBtn.addEventListener("click",function(){Ti.Media.showCamera({saveToPhotoGallery:!0,allowEditing:!0,mediaTypes:[Ti.Media.MEDIA_TYPE_VIDEO,Ti.Media.MEDIA_TYPE_PHOTO],success:function(a){if(a.mediaType==Ti.Media.MEDIA_TYPE_PHOTO){var e=Ti.UI.createImageView({width:200,height:200,image:a.media});win3.add(e)}else alert("thought this was a photo but, it's:"+a.mediaType)},error:function(a){alert(a.code==Ti.Media.NO_CAMERA?"please run this on a device":"other error: "+a.code)}})});