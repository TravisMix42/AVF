var longCoordinateLabel=new Object,latCoordinateLabel=new Object,getGeoCoords=function(){Ti.Geolocation.purpose="Your location is needed to gather lat/long coords.",Ti.Geolocation.getCurrentPosition(function(e){var t=e.coords.latitude,a=e.coords.longitude;latCoordinateLabel=Ti.UI.createLabel({color:"black",text:"Latitude: "+t,textAlign:"center",font:{fontSize:"20dp",fontWeight:"bold"},height:80,top:20,left:80,right:80}),longCoordinateLabel=Ti.UI.createLabel({color:"black",text:"Longitude: "+a,textAlign:"center",font:{fontSize:"20dp",fontWeight:"bold"},height:80,top:120,left:80,right:80}),win1.add(longCoordinateLabel),win1.add(latCoordinateLabel)})},refreshBtn=Ti.UI.createButton({height:80,left:80,right:80,top:220,borderRadius:10,backgroundColor:"green",color:"black",title:"Get Location"});refreshBtn.addEventListener("click",function(){longCoordinateLabel.text="",latCoordinateLabel.text="",getGeoCoords()});