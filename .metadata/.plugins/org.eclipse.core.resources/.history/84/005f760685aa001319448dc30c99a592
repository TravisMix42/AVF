//everythign in here will be applied to win2

var runCompass = new Object();

var compassBtn = Ti.UI.createButton({
	height : 80,
	top : 20,
	left : 20,
	right : 20,
	backgroundColor : 'green',
	color : 'black',
	title : "Start Compass"
});

var runCompass = function(){
	Ti.Geolocation.getCurrentHeading(function(e){
	var trueHeading = e.heading.trueHeading;
	var compassLabel = Ti.UI.createLabel({
		color: '#fff',
		text: 'True Heading: ' + trueHeading,
		height: 200,
		top : 100,
		textAlign: 'center',
		font: {
			fontSize: '20dp',
			fontWeight: 'bold'
		} 
	});
	win2.add(compassLabel);
} 

compassBtn.addEventListener('click', runCompass);