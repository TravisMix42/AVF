});

var tab1 = Titanium.UI.createTab({  
    icon:'KS_nav_views.png',
    title:'Data Input',
    window:win1
});

//tab2 local storage view
var win2 = Titanium.UI.createWindow({  
    title:'Local Storage View',
    backgroundColor:'#fff'
});

var tab2 = Titanium.UI.createTab({  
    icon:'KS_nav_views.png',
    title:'Locale View',
    window:win2
});

//tab3 cloud storage view
