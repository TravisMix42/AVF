//create our main window
var mainWin = Ti.UI.createWindow({
	backgroundColor : "#fff",
	top : "40dp",
	bottom : "80dp"
});

//create our title label
var titleView = Ti.UI.createLabel({
	top : "0dp",
	height : "40dp",
	title : "Where You At?",
	font : {fontSize : "36dp", fontWeight : "bold"},
	textAlign : 'center',
	color : "black"
});


//add all needed files to the main window
mainWin.add(titleView);

//event listeners