var takePic=function(){Ti.Media.showCamera({saveToPhotoGallery:!0,allowEditing:!1,mediaTypes:[Ti.Media.MEDIA_TYPE_PHOTO],success:function(e){if(e.mediaType==Ti.Media.MEDIA_TYPE_PHOTO){var a=Ti.UI.createWindow({modal:!0});nameField=Ti.UI.createTextView({top:"100dp",left:"20dp",right:"20dp",height:"40dp",hintText:"Name Your Photo",textAlign:"center"}),a.add(nameField),a.open(),mainWin.close(),Cloud.Places.create({name:nameField.value})}else alert("Not a photo but a "+e.mediaType)},error:function(e){alert(e.code==Ti.Media.NO_CAMERA?"please run this on a device with a camera":"other error: "+e.code)}})};